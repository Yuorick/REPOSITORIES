	double *mparrValues; // вектор аргументов столбцов
	double mArgRow;  // значение аргумента строки


	__fastcall ~TTable_1D() ;

  TTable_1D();
 // конструктор копирования
 TTable_1D (const TTable_1D &R) ;
 // оператор присваивания
 TTable_1D operator=(TTable_1D  R);
// парам констр
TTable_1D( TURPointXY *ppntArr, const int iNumPoints);

virtual void createTargPointsArray(const int valTargCellSize, TURPointXY **ppTargPntArray, int *lenTargPntArray);

//virtual void createAimPointsArray(const int valTargCellSize, TURPointXY **ppAimPntArray, int *lenAimPntArray) ;
